<button onclick="location.href='/announcement/{{course}}'"> Cancel</button>

<form class="newAnnForm" id="new-ann" method="post" action="/announcement/{{course}}/newAnnouncement">
    <div>
        <label for="ann_title">Enter title</label>
        <textarea type="text" name="ann_title" id="ann_title"></textarea>
    </div>
    <div class="error" id="no-title" hidden>Please provide a title</div>
    <div>
        <label for="ann_description">Enter Description</label>
        <textarea type="text" id="ann_description" name="ann_description"></textarea>
    </div>
    <div class="error" id="no-desc" hidden>Please provide a description</div>
    </br>
    <button class="submit" id="ann-submit" type="submit">Create Announcement</button>
    </br>

</form>

<div>
    {{error}}
</div>
<script src="../../public/js/annCheck.js"></script>