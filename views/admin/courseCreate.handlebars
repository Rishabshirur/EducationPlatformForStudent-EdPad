<button onclick="location.href='/admin';">Back</button>

<h1>Create New Course</h1>
<div>{{error}}</div>
<div id="error" class="error" hidden>I'm an error. I will change through Client-Side JS</div>
<form id="course-registration-form" method="POST" action="/admin/createcourse">
    <label for="courseTitle">Course title:</label>
    <input type="text" id="courseTitle" name="courseTitle" required>
    <br>
    <label for="courseId">Course CID:</label>
    <input type="text" id="courseId" name="courseId" required>
    <br>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required>
    <br>
    <label for="facultyInput">Professor:</label>
    <select id="facultyInput" name="facultyInput" required>
        {{#each allFaculty}}
        <option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
        {{/each}}
    </select>
    <br>
    <button type="submit">Create</button>
</form>


{{#if error}}
<p class="error">{{error}}</p>
{{/if}}

<script src="../../public/js/createCourseCheck.js"></script>