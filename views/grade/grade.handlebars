{{#if faculty}}
    <button onclick="location.href='/grade/{{courseId}}'"> Back</button>
{{else}}
    <button onclick="location.href='/course/{{courseId}}'"> Back</button>
{{/if}}

<h2>{{course}} - Grade</h2>

{{#if faculty}}
<h3>Student Name: {{student}}</h3>
{{/if}}

{{#each allGrade}}
<div> 
    <h4>{{this.[1]}}</h4>
    <p>Grade:{{this.[3]}}/{{this.[2]}}</p>
    {{#if ../faculty}}
    {{else}}
    <form id="form" method="post" action="/submission">
        <label for="comment">Comment: </label>
        <textarea id="comment" name="comment"></textarea>
        <input type="submit">
    </form>
    <div id="error">Please giev valid input</div>
    {{/if}}
</div>
{{/each}}
<h3>Total Score: {{totalScore}} / 100</h3>

